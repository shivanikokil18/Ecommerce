<p id="notice"><%= notice %></p>

<h1>Product Categories</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class= "table-primary">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.name %></td>
        <td><%= link_to 'Show', product_category, class: "btn btn-outline-secondary btn-sm" %></td>
        <% if can? :update, @product_category%>
        <td><%= link_to 'Edit', edit_product_category_path(product_category), class: "btn btn-outline-secondary btn-sm" %></td>
        <% end %>
        <% if can? :destroy, @product_category%>
        <td><%= button_to 'Destroy', product_category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @product_category%>
<%= link_to 'New Product Category', new_product_category_path, class: "btn btn-outline-secondary btn-sm" %>
<% end %>
