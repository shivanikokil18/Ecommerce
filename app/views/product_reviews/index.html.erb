<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover table-bordered ">
  <thead class="table-primary">
    <tr>
      <th>Review</th>
      <th>Rating</th>
      <th>Product</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_reviews.each do |product_review| %>
      <tr>
        <td><%= product_review.review %></td>
        <td><%= product_review.rating %></td>
        <td><%= product_review.product_id %></td>
        <td><%= product_review.user_id %></td>
        <td><%= link_to 'Show', product_review, class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_product_review_path(@product_review), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= button_to 'Destroy', product_review, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Review', new_product_review_path, class: "btn btn-outline-secondary" %>
