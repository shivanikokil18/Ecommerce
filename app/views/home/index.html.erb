<head>
 <link rel="tylesheet" href="app/assets/stylesheets/home.scss"> 
</head>
<body class="body">
<h1 class="h1">Welcome to Ecommerce</h1>
<p class="p1">India's top shopping site </p>

<div class="container">
  <% @products.each_slice(3) do |product_array|%>
    <div class="row">
      <% product_array.each do |product|%>
        <div class="col-md-4 card gy-4">
          <h4><%= product.name %></h4>
          <p> <%= product.deescription%></p>
          <h6><%= product.price %></h6>
          <p><%= product.tax %></p>
          <p><%= product.final_value %></p>
          <p> <%= product.status%></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


</body>
