<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class= "table-primary">
    <tr>
      <th>Mode</th>
      <th>Status</th>
      <th>Transaction date</th>
      <th>Total amount</th>
      <th>User</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.mode %></td>
        <td><%= transaction.status %></td>
        <td><%= transaction.transaction_date %></td>
        <td><%= transaction.total_amount %></td>
        <td><%= transaction.user_id %></td>
        <td><%= transaction.order_id %></td>
        <td><%= link_to 'Show', transaction, class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= button_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path, class: "btn btn-outline-secondary" %>
