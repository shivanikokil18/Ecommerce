<p id="notice"><%= notice %></p>

<h1>User Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>Pincode</th>
      <th>State</th>
      <th>Country</th>
      <th>Phn no</th>
      <th>Residencial phn no</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_addresses.each do |user_address| %>
      <tr>
        <td><%= user_address.address %></td>
        <td><%= user_address.city %></td>
        <td><%= user_address.pincode %></td>
        <td><%= user_address.state %></td>
        <td><%= user_address.country %></td>
        <td><%= user_address.phn_no %></td>
        <td><%= user_address.residencial_phn_no %></td>
        <td><%= user_address.user_id %></td>
        <td><%= link_to 'Show', user_address %></td>
        <td><%= link_to 'Edit', edit_user_address_path(user_address) %></td>
        <td><%= link_to 'Destroy', user_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

