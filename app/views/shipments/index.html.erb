<p id="notice"><%= notice %></p>

<h1>Shipments</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class= "table-primary">
    <tr>
      <th>Shipment date</th>
      <th>Details</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.shipment_date %></td>
        <td><%= shipment.details %></td>
        <td><%= shipment.order_id %></td>
        <td><%= link_to 'Show', shipment, class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_shipment_path(shipment), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= button_to 'Destroy', shipment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shipment', new_shipment_path, class: "btn btn-outline-secondary" %>
