<%= form_with(model: order_item) do |form| %>
  <% if order_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order_item.errors.count, "error") %> prohibited this order_item from being saved:</h2>

      <ul>
        <% order_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :item_quantity %>
    <%= form.number_field :item_quantity, class: "form-control", placeholder: "" %>
  </div>

  <div class="field">
    <%= form.label :item_price %>
    <%= form.text_field :item_price, class: "form-control", placeholder: "" %>
  </div>

  <div class="field">
    <%= form.label :order_id %>
    <%= select_tag "order_id", options_from_collection_for_select(@orders, "id", "order_placed_date"), class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <%= select_tag "product_id", options_from_collection_for_select(@products, "id", "name"), class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-secondary" %>
  </div>
<% end %>
