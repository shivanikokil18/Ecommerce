<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table class="table table-striped table-hover table-bordered ">
  <thead class="table-primary">
    <tr>
      <th>User</th>
      <th>User address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.user_id %></td>
        <td><%= cart.user_address_id %></td>
        <td><%= link_to 'Show', cart, class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path, class: "btn btn-outline-secondary" %>
